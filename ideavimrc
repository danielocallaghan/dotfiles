
set surround
set commentary

let mapleader=','

set hlsearch         "Hilight searches by default
set incsearch        "Find the next match as we type the search
set ignorecase
set smartcase
nmap <silent> <leader>/ :nohlsearch<CR>

"Start scrolling when we're 8 lines away from margins
set scrolloff=10
set sidescrolloff=15
set sidescroll=1

set smartindent
set autoindent
set smarttab
set expandtab
set shiftround " When at 3 spaces and I hit >>, go to 4, not 5.


" move up/down quickly by using C-j, C-k
" which will move us around by functions
noremap <silent> <C-j> 5j
noremap <silent> <C-k> 5k

nnoremap <CMD-Left> :tabprevious<CR>
nnoremap <C-Right> :tabnext<CR>
map <F10> :tabmove -1<CR>
map <F12> :tabmove +1<CR>

" nmap <leader>t :tabmove +1<CR>
nmap <leader>tm :tabmove +1<CR>
nmap <leader>tM :tabmove -1<CR>

" Go to tab by number
noremap <leader>1 1gt
noremap <leader>2 2gt
noremap <leader>3 3gt
noremap <leader>4 4gt
noremap <leader>5 5gt
noremap <leader>6 6gt
noremap <leader>7 7gt
noremap <leader>8 8gt
noremap <leader>9 9gt
noremap <leader>0 :tablast<cr>

nmap <D-k> [e
nmap <D-j> ]e
vmap <D-k> [egv
vmap <D-j> ]egv

